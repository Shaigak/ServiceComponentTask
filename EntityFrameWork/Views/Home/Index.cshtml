 @model HomeVm

<!-- MAIN START -->

    <main>

        <!-- SLIDER START -->

        <section id="slider">
            @await Component.InvokeAsync("SliderImage")
           @await Component.InvokeAsync("Slider")
        </section>

        <!-- SLIDER END -->

        <!-- PRODUCTS START -->

        <section id="products">
            <div class="container">
                <div class="row pt-5">
                    <div class="col-12 d-flex justify-content-between">
                        <ul class="category-mobile d-md-none list-unstyled">
                            <li>
                                <a href="" class="categories mr-2">Categories</a>
                                <i class="fas fa-caret-down"></i>
                                <ul class="category list-unstyled" style="display: none;">
                                    <li><a href="" data-id="all">All</a></li>
                                    <li><a href="" data-id="popular">Popular</a></li>
                                    <li><a href="" data-id="winter">Winter</a></li>
                                    <li><a href="" data-id="various">Various</a></li>
                                    <li><a href="" data-id="exotic">Exotic</a></li>
                                    <li><a href="" data-id="green">Greens</a></li>
                                    <li><a href="" data-id="cactuse">Cactuses</a></li>
                                </ul>
                            </li>
                        </ul>
                        <ul class="category d-none d-md-flex list-unstyled">
                            <li><a href="" data-id="all">All</a></li>


                            @foreach (var item in Model.Categories)
                            {
                                <li><a href="" data-id="@item.Id">@item.Name</a></li>
                            }
                            
                           
                        </ul>
                        <ul class="list-unstyled">
                            <li>
                                <a href="" class="mr-2">Filter</a>
                                <i class="fas fa-caret-down"></i>
                            </li>
                        </ul>
                    </div>
                </div>
                <div class="row">

                    @foreach (var item in Model.Products)
                    {
                         <div class="col-sm-6 col-md-4 col-lg-3 mt-3">
                        <div class="product-item text-center" data-id="@item.CategoryId">
                            <div class="img">
                                <a href="">
                                    <img src="~/img/@item.Images.FirstOrDefault(m=>m.IsMain)?.Image" class="img-fluid" alt="">
                                </a>
                            </div>
                            <div class="title mt-3">
                                <h6>@item.Name</h6>
                            </div>
                             <div class="price">
                                <form method="post" data-id="@item.Id">
                             
                                 <button class="btn btn-primary addproduct ">Add to cart</button>
                       
                                </form>
                                  <span class="text-black-50">$@item.Price</span>
                             </div>
                        </div>
                    </div>
                    }

                   <div class="alert alert-success d-none">
                   <strong>Success!</strong> Add your product in Basket 
                   </div>
                   
                   
                </div>
            </div>
        </section>

        <!-- PRODUCTS END -->

        <!-- ABOUT START -->

        <section id="about">
            <div class="container py-5">
                <div class="row py-5">
                    @foreach (var item in Model.Abouts)
                    {
                        <div class="col-lg-6">
                        <div class="img">
                            <img src="~/img/@item.Image" class="img-fluid" alt="">
                            <div
                                class="player position-absolute rounded-circle d-flex align-items-center justify-content-center">
                                <i class="fas fa-play fa-lg"></i>
                            </div>
                        </div>
                    </div>

                      <div class="col-lg-6">
                        <div class="about-text mt-5 mt-lg-0 px-lg-5">
                            <h1>@Html.Raw(@item.Title)</h1>
                            <p class="py-3">@item.Description</p>
                            <ul class="list-unstyled">
                                @foreach (var items in Model.Advantages)
                                {
                                    <li class="mt-3"><img src="~/img/h1-custom-icon.png" class="mr-2" alt=""> @items.Name </li class="mt-3">
                                }
                             
                            </ul>
                        </div>

                       
                    </div>
                        
                    }
                  
                </div>
            </div>
        </section>

        <!-- ABOUT END -->

        <!-- EXPERTS START -->

        <section id="experts">
            <div class="container">
                <div class="row py-5">
                   @await Component.InvokeAsync("Flower")
                </div>
               @await Component.InvokeAsync("Worker")
            </div>
        </section>

        <!-- EXPERTS END -->

        <!-- SUBSCRIBE START -->
        @foreach (var item in Model.Subscribes)
        {
            <section style="background: url('../img/@item.Image');background-attachment:fixed" id="subscribe">
            <div class="container py-5">
                <div class="row py-5">
                    <div class="col-12">
                        <div class="content text-center py-5">
                            <h3>@item.Name</h3>
                            <div class="form-group d-flex justify-content-center flex-wrap mt-5">
                                <input type="email" placeholder="Email Address" class="form-control-lg rounded-0">
                                <button class="btn btn-danger btn-lg rounded-0 px-5 mt-3 mt-sm-0">Subscribe</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>
            
        }
        
        <section>
            <div></div>
        </section>

        <!-- SUBSCRIBE END -->

        <!-- BLOG START -->

        @await Component.InvokeAsync("Blog")
        

        <!-- BLOG END -->

        <!-- SAY START -->

        <section id="say">
            <div class="container">
                <div class="row py-5 justify-content-center">
                    <div class="col-md-8 col-xl-6">
                        <div class="owl-carousel say">
                           @foreach (var item in Model.Florists)
                           {
                                <div>
                                <div class="item text-center">
                                    <div class="img d-flex justify-content-center">
                                        <img src="~/img/@item.Image" alt="">
                                    </div>
                                    <div class="text text-muted pt-3 pb-5">
                                        <i>@item.Description </i>
                                    </div>
                                    <div class="author">
                                        <h6>@item.Name</h6>
                                        <p class="text-black-50">@item.Name</p>
                                    </div>
                                </div>
                            </div>
                            
                           }
                           
                        </div>
                    </div>
                </div>
            </div>
        </section>

        <!-- SAY END -->

        <!-- INSTAGRAM START -->

        <section id="instagram">
            <div class="owl-carousel instagram">

                @foreach (var item in Model.Instagrams)
                {
                    <div><img src="~/img/@item.Image" class="img-fluid" alt=""></div>
                }
            
            </div>
            <div class="hastag bg-light text-muted py-2 px-3">
                #FIORELLO
            </div>
        </section>

        <!-- INSTAGRAM END -->

    </main>

    <!-- MAIN END -->